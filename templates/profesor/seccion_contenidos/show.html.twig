{% extends 'base.html.twig' %}

{% block title %}SeccionContenidos{% endblock %}

{% block body %}
    <section class="container mt-5">
        <div class="row">
            <h3 class="col-10">Seccion</h3>
            {{ include('profesor/seccion_contenidos/_delete_form.html.twig') }}
        </div>
        <hr>
        <div class="contenido bg-light rounded p-3 my-1">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ seccion_contenido.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ seccion_contenido.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Descripcion</th>
                        <td>{{ seccion_contenido.descripcion }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row justify-content-around mt-4">
            <a class="col-2 btn btn-primary" href="{{ path('seccion_contenidos_index') }}">Volver a la lista</a>
            <a class="col-2 btn btn-primary float-end" href="{{ path('seccion_contenidos_edit', {'id': seccion_contenido.id}) }}">Editar</a>
        </div>
    </section>
{% endblock %}
