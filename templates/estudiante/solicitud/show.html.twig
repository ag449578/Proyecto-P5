{% extends 'base.html.twig' %}

{% block title %}Solicitud{% endblock %}

{% block body %}
    
    <div class = "container" style="min-height: 680px;">
    <h1>Solicitud</h1>    
    
    <div class="bg-light rounded shadow container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ solicitud.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ solicitud.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ solicitud.descripcion }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                {% if solicitud.estado == 0 %}
                    <td>Sin Respuesta</td>
                {% else %}
                    <td>Respuesta</td>
                {% endif %}
            </tr>
        </tbody>
    </table>
    
    </div>
    
    <div class = "inline">
    <a href="{{ path('solicitud_edit', {'id': solicitud.id}) }}" class="btn btn-primary">Editar</a>
    {{ include('estudiante/solicitud/_delete_form.html.twig') }}
    </div>

    </div>
    
{% endblock %}
    